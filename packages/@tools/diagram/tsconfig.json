{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist",
    "module": "commonjs",
    "target": "ES2021",
    "paths": {
      "@": ["index"],
      "@/*": ["*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
